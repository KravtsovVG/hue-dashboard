{% extends '_templates/default.html.twig' %}

{% set section = 'lights' %}

{% block content %}
	<div class="container theme-showcase" role="main">

		<div class="page-header">
			<h1>Lights</h1>
		</div>
		<div class="row">
			<div class="col-md-12">
				<table class="table">
					<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Type</th>
						<th>Version</th>

					</tr>
					</thead>
					<tbody>
					{% for light in lights %}
						<tr>
							<td>{{ light.id }}</td>
							<td>{{ light.name }}</td>
							<td>{{ light.type }}</td>
							<td>{{ light.software_version }}</td>

						</tr>
					{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div> <!-- /container -->
{% endblock %}